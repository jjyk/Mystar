<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.jjyk.mystar.SecondActivity"
    android:id="@+id/activity_second"
    android:background="#170031ff">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:textSize="30sp"
            android:id="@+id/buttonModuleLess"
            android:background="#ff8378ff"
            android:onClick="onClickLess"
            android:text="&lt;&lt;&lt;"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:textSize="30sp"
            android:background="#ff8378ff"
            android:id="@+id/buttonModule"
            android:onClick="onClickModule"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:textSize="30sp"
            android:id="@+id/buttonModuleMore"
            android:background="#ff8378ff"
            android:onClick="onClickMore"
            android:text=">>>"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp">

        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:textSize="50sp"
            android:id="@+id/buttonCow"
            android:background="#a3b69eff"
            android:onClick="onClick_buttonCow"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_weight="1.7"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp">

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="110sp"
            android:background="#a3b69eff"
            android:id="@+id/textView1"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Ожидаемый надой"
            android:textSize="40sp"
            android:background="#a3b69eff"
            android:id="@+id/textView25"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="40sp"
                android:background="#a3b69eff"
                android:id="@+id/textView2"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_weight="2.1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:text=""
            android:textSize="30sp"
            android:gravity="center"
            android:background="#a3b69eff"
            android:id="@+id/textView11"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:textSize="30sp"
            android:gravity="center"
            android:text="Время доения"
            android:background="#a3b69eff"
            android:id="@+id/textView12"
            android:layout_marginLeft="3dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:textSize="30sp"
            android:text="Молокоотдача"
            android:background="#a3b69eff"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:id="@+id/textView13"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_weight="2.1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp">

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:text="Текущее"
            android:textSize="30sp"
            android:gravity="center"
            android:background="#a3b69eff"
            android:id="@+id/textView7"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:textSize="30sp"
            android:gravity="center"
            android:background="#a3b69eff"
            android:id="@+id/textView3"
            android:layout_marginLeft="3dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:textSize="30sp"
            android:background="#a3b69eff"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:id="@+id/textView5"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_weight="2.1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:textSize="30sp"
            android:text="Ожидаемое"
            android:background="#a3b69eff"
            android:gravity="center"
            android:id="@+id/textView8"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:textSize="30sp"
            android:background="#a3b69eff"
            android:gravity="center"
            android:id="@+id/textView4"
            android:layout_marginLeft="3dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>


        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:textSize="30sp"
            android:background="#a3b69eff"
            android:gravity="center"
            android:id="@+id/textView6"
            android:layout_marginLeft="3dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_weight="1.3"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp">

        <com.jjoe64.graphview.GraphView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/graph" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp">

        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:text=""
            android:textSize="40sp"

            android:id="@+id/buttonOn"
            android:onClick="onClickMilking"
            android:background="#ff27ff22" />


    </LinearLayout>

    </LinearLayout>

</RelativeLayout>
